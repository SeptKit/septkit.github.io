{
	"name": "@septkit/ext-explorer",
	"version": "1",
	"description": "SeptKit extension - explorer that draws an outline view of an SCL file",
	"private": true,
	"type": "module",
	"contributes": {
		"primarySidebars": [
			{
				"id": "sprinteins.explorer",
				"displayName": "Explorer",
				"icon": "/assets/icon.svg",
				"entryPoint": "/set-editor.js"
			}
		]
	},
	"scripts": {
		"dev": "vite",
		"//====== BUILD ======//": "",
		"build": "vite build",
		"build:watch": "vite build --watch",
		"build:serve": "concurrently \"npm run preview\" \"npm run build:watch\"",
		"build-only": "vite build",
		"preview": "vite preview --port 54939",
		"//====== TEST ======//": "",
		"test": "vitest --project unit",
		"test:watch": "pnpm test --watch",
		"test:debug": "npm run test -- --browser.headless=false --browser.devtools=true --testTimeout 10000000",
		"test:debug:watch": "npm run test:debug -- --watch",
		"//====== TOOLING ======//": "",
		"type-check": "vue-tsc --build",
		"lint": "oxlint . --fix -D correctness --ignore-path .gitignore",
		"format": "prettier --write src/",
		"format:check": "prettier --check src/",
		"//====== LINK ======//": "",
		"link:ui": "rm -rf ./node_modules/@septkit/ui && ln -s ../../../../ui ./node_modules/@septkit/ui",
		"unlink:ui": "rm -rf ./node_modules/@septkit/ui && pnpm install",
		"link:fileio": "rm -rf ./node_modules/@septkit/fileio && ln -s ../../../../fileio ./node_modules/@septkit/fileio",
		"unlink:fileio": "rm -rf ./node_modules/@septkit/fileio && pnpm install",
		"unlink:all": "rm -rf ./node_modules/@septkit && pnpm install",
		"//====== CI ======//": "",
		"ci-tests": "npm run format:check && npm run lint && npm run build && npm run test"
	},
	"dependencies": {
		"@septkit/fileio": "catalog:",
		"@septkit/sclsdk": "catalog:",
		"@septkit/ui": "catalog:",
		"@vueuse/core": "^13.8.0",
		"pinia": "^3.0.3",
		"reka-ui": "^2.5.1",
		"vue": "^3.5.22"
	},
	"devDependencies": {
		"@prettier/plugin-oxc": "^0.0.4",
		"@tailwindcss/vite": "^4.1.14",
		"@testing-library/vue": "^8.1.0",
		"@tsconfig/node22": "^22.0.2",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^22.18.6",
		"@vitejs/plugin-vue": "^6.0.1",
		"@vitest/browser": "^3.2.4",
		"@vitest/eslint-plugin": "^1.3.13",
		"@vue/eslint-config-prettier": "^10.2.0",
		"@vue/eslint-config-typescript": "^14.6.0",
		"@vue/test-utils": "^2.4.6",
		"@vue/tsconfig": "^0.8.1",
		"concurrently": "^9.2.0",
		"daisyui": "^5.3.2",
		"eslint": "^9.33.0",
		"eslint-plugin-oxlint": "~1.11.0",
		"eslint-plugin-vue": "~10.4.0",
		"jiti": "^2.5.1",
		"jsdom": "^27.0.0",
		"oxlint": "~1.11.0",
		"playwright": "^1.53.2",
		"prettier": "3.6.2",
		"tailwindcss": "^4.1.14",
		"typescript": "~5.9.0",
		"vite": "npm:rolldown-vite@latest",
		"vite-plugin-css-injected-by-js": "^3.5.2",
		"vite-plugin-static-copy": "^3.1.1",
		"vite-plugin-vue-devtools": "^8.0.2",
		"vitest": "^3.2.4",
		"vue-tsc": "^3.1.0"
	}
}